{
  "id": 104,
  "name": "الهمزة",
  "transliteration": "Al-Humazah",
  "translation": "The Traducer",
  "verses": [
    "waylun li-kulli humazatin lumazatin-i",
    "alladhī jamaʿa mālan wa-ʿaddadahū",
    "yaḥsabu ʾanna mālahū ʾakhladahū",
    "kallā la-yunbadhanna fī l-ḥuṭamati",
    "wa-mā ʾadrāka mā l-ḥuṭamatu",
    "nāru llāhi l-mūqadatu",
    "allatī taṭṭaliʿu ʿalā l-ʾafʾidati",
    "ʾinnahā ʿalayhim muʾṣadatun",
    "fī ʿamadin mumaddadatin"
  ]
}