{
  "id": 101,
  "name": "القارعة",
  "transliteration": "Al-Qari'ah",
  "translation": "The Calamity",
  "verses": [
    "al-qāriʿatu",
    "mā l-qāriʿatu",
    "wa-mā ʾadrāka mā l-qāriʿatu",
    "yawma yakūnu n-nāsu ka-l-farāshi l-mabthūthi",
    "wa-takūnu l-jibālu ka-l-ʿihni l-manfūshi",
    "fa-ʾammā man thaqulat mawāzīnuhū",
    "fa-huwa fī ʿīshatin rāḍiyatin",
    "wa-ʾammā man khaffat mawāzīnuhū",
    "fa-ʾummuhū hāwiyatun",
    "wa-mā ʾadrāka mā hiyah",
    "nārun ḥāmiyatun"
  ]
}